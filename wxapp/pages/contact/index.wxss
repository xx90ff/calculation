/* pages/shou/index.wxss */
.index {
  width: 100vw;
  height: 100vh;
  background-color: #f5f5f5;
}

.bg-fff {
  background-color: #fff !important;
}

.top {
  height: 130rpx;
  background-color: #000;
  color: #fff;
  padding-top: 70rpx;
  font-size: 28rpx;
  text-indent: 30rpx;
  box-sizing: border-box;
}

.top image {
  width: 30rpx;
  height: 30rpx;
}

.shou-icon {
  width: 40rpx;
  height: 30rpx;
}

.title {
  padding-left: 30rpx;
  box-sizing: border-box;
}

.tilte-top {
  font-size: 38rpx;
  padding: 20rpx 0;
  color: #333;
}

.title-bottom {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

.text-666 {
  color: #999;
}

.text-gray-blue {
  color: rgb(53, 81, 134);
}

.code-title {
  color: #333;
  padding-top: 40rpx;
  padding-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: 500;
  justify-content: center;
}

.mt-10 {
  margin-top: 10rpx;
}

.color-red {
  color: #ca563d;
  font-size: 50rpx;
  margin: 0 10rpx;
}

.code-con {
  padding: 60rpx 50rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.code-img {
  width: 500rpx;
  height: 500rpx;
}

.code-con view {
  font-size: 40rpx;
  font-weight: 600;
}

.code {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.read {
  height: 100rpx;
  padding-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}